{
  "manifest_version": 3,
  "name": "LinkedIn Data Extractor - AI Resume Architect",
  "version": "1.0",
  "description": "Extracts LinkedIn profile data for AI Resume Architect.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/in/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}